@model WebApplication3.Models.compl

@{
    ViewData["Title"] = "Удаление комплектации";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Вы уверены, что хотите удалить эту комплектацию?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.id)</dd>

                <dt class="col-sm-3 fw-bold">Название:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.kompl_name)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Удалить
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Отмена
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}