@model WebApplication3.Models.strana

@{
    ViewData["Title"] = "Информация о стране";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2><i class="fas fa-globe-europe"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">
                            Название страны
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.strana_name)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div>