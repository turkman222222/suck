@{
    ViewData["Title"] = "Панель администратора";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-tachometer-alt me-2"></i>Панель управления</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Блок пользователей -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-3x text-danger mb-3"></i>
                                    <h5>Пользователи</h5>
                                    <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-danger">
                                        Управление <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Блок автомобилей -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-car fa-3x text-danger mb-3"></i>
                                    <h5>Автомобили</h5>
                                    <a asp-controller="Carsses" asp-action="Index" class="btn btn-sm btn-outline-danger">
                                        Управление <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Блок справочников -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-book fa-3x text-danger mb-3"></i>
                                    <h5>Справочники</h5>
                                    <div class="btn-group mt-2">
                                        <button class="btn btn-sm btn-outline-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Выбрать справочник
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-controller="stranas" asp-action="Index"><i class="fas fa-globe me-2"></i>Страны</a></li>
                                            <li><a class="dropdown-item" asp-controller="salonches" asp-action="Index"><i class="fas fa-store me-2"></i>Салоны</a></li>
                                            <li><a class="dropdown-item" asp-controller="rols" asp-action="Index"><i class="fas fa-user-tag me-2"></i>Роли</a></li>
                                            <li><a class="dropdown-item" asp-controller="Marks" asp-action="Index"><i class="fas fa-car me-2"></i>Марки</a></li>
                                            <li><a class="dropdown-item" asp-controller="cvetas" asp-action="Index"><i class="fas fa-palette me-2"></i>Цвета</a></li>
                                            <li><a class="dropdown-item" asp-controller="compls" asp-action="Index"><i class="fas fa-cogs me-2"></i>Комплектации</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Последние действия -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-circle me-2"></i>Последние действия</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Новый пользователь зарегистрирован
                            <span class="badge bg-primary rounded-pill">только что</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Добавлен новый автомобиль
                            <span class="badge bg-primary rounded-pill">5 мин назад</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Обновлен справочник стран
                            <span class="badge bg-primary rounded-pill">10 мин назад</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Быстрая статистика -->
      
    </div>
</div>