@model WebApplication3.Models.salonch

@{
    ViewData["Title"] = "Удаление автосалона";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-store-alt"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger fw-bold">Вы уверены, что хотите удалить этот салон?</h4>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">
                            Название салона
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.salon)
                        </dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Удалить
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Отмена
                </a>
            </form>
        </div>
    </div>
</div>