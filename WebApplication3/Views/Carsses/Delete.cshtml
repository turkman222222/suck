@model WebApplication3.Models.Carss

@{
    ViewData["Title"] = "Удалить автомобиль";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Удалить автомобиль</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Вы уверены, что хотите удалить этот автомобиль?</h5>
                <p class="mb-0">Это действие нельзя отменить. Все данные об автомобиле будут безвозвратно удалены.</p>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Модель:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.model)</dd>

                        <dt class="col-sm-4">Год выпуска:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.god_poiz)</dd>

                        <dt class="col-sm-4">Марка:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Marks.name_marka)</dd>

                        <dt class="col-sm-4">Цена:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.price) ₽</dd>
                    </dl>

                    @if (Model.image != null && Model.image.Length > 0)
                    {
                        <div class="mb-4">
                            <h5>Изображение автомобиля:</h5>
                            <img src="@Url.Action("GetImage", "Carsses", new { id = Model.id })"
                                 class="img-fluid rounded" style="max-height: 300px;" alt="Изображение автомобиля" />
                        </div>
                    }

                    <form asp-action="DeleteConfirmed" class="mt-4">

                        <input type="hidden" asp-for="id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <button type="submit" class="btn btn-danger me-md-2">
                                <i class="fas fa-trash-alt me-1"></i> Удалить
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-exclamation-circle me-2"></i>Внимание!</h5>
                            <p class="card-text">Удаление автомобиля приведет к безвозвратной потере всех связанных данных.</p>
                            <p class="card-text">Рекомендуется проверить все зависимости перед удалением.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>