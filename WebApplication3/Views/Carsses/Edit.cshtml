@model WebApplication3.Models.Carss

@{
    ViewData["Title"] = "Редактировать автомобиль";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Редактировать автомобиль</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="model" class="form-control" placeholder="Модель" required />
                                    <label asp-for="model" class="control-label"></label>
                                    <span asp-validation-for="model" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="god_poiz" class="form-control" placeholder="Год выпуска" required />
                                    <label asp-for="god_poiz" class="control-label"></label>
                                    <span asp-validation-for="god_poiz" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="id_marki" class="form-select" asp-items="ViewBag.id_marki" required>
                                        <option value="">Выберите марку</option>
                                    </select>
                                    <label asp-for="id_marki" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="id_str" class="form-select" asp-items="ViewBag.id_str" required>
                                        <option value="">Выберите страну</option>
                                    </select>
                                    <label asp-for="id_str" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="id_cvet" class="form-select" asp-items="ViewBag.id_cvet" required>
                                        <option value="">Выберите цвет</option>
                                    </select>
                                    <label asp-for="id_cvet" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="id_salona" class="form-select" asp-items="ViewBag.id_salona" required>
                                        <option value="">Выберите салон</option>
                                    </select>
                                    <label asp-for="id_salona" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="id_kompl" class="form-select" asp-items="ViewBag.id_kompl" required>
                                        <option value="">Выберите комплектацию</option>
                                    </select>
                                    <label asp-for="id_kompl" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="price" class="form-control" placeholder="Цена" required />
                                    <label asp-for="price" class="control-label"></label>
                                    <span asp-validation-for="price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="image" class="form-label">Изображение автомобиля</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                    <div class="form-text">Загрузите новое изображение (оставьте пустым, чтобы сохранить текущее)</div>
                                    <span asp-validation-for="image" class="text-danger"></span>

                                    @if (Model.image != null && Model.image.Length > 0)
                                    {
                                        <div class="mb-4">
                                            <h5>Изображение автомобиля:</h5>
                                            <img src="@Url.Action("GetImage", "Carsses", new { id = Model.id })"
                                                 class="img-fluid rounded" style="max-height: 300px;" alt="Изображение автомобиля" />
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="submit" class="btn btn-warning me-md-2">
                                        <i class="fas fa-save me-1"></i> Сохранить изменения
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> Назад к списку
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-info-circle me-2"></i>Информация</h5>
                            <p class="card-text">Внесите необходимые изменения в данные автомобиля.</p>
                            <p class="card-text">Все обязательные поля должны быть заполнены.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}