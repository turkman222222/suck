@model IEnumerable<WebApplication3.Models.Carss>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Каталог автомобилей";
}

<div class="container mt-4">
    <h1><i class="fas fa-car"></i> @ViewData["Title"]</h1>

   @if(User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Добавить автомобиль
            </a>
        </p>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4" id="car-@item.id">
                <div class="card h-100">
                    @if (item.image != null)
                    {
                        <img src="@Url.Action("GetImage", "Carsses", new { id = item.id })"
                             class="card-img-top" alt="@item.model" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-car fa-5x text-light"></i>
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.model</h5>
                        <p class="card-text">
                            <strong>Марка:</strong> @item.Marks?.name_marka<br>
                            <strong>Год выпуска:</strong> @item.god_poiz<br>
                            <strong>Цена:</strong> @(item.price?.ToString("N0") ?? "Цена не указана") руб.
                        </p>
                    </div>

                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-info-circle"></i> Подробнее
                            </a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="btn btn-sm btn-outline-success toggle-favorite" data-car-id="@item.id">
                                    <i class="far fa-heart"></i> В избранное
                                </button>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-action="Create" asp-route-id="@item.id" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-create"></i>
                                    </a>
                                </div>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.toggle-favorite').each(function () {
                var carId = $(this).data('car-id');
                checkFavoriteStatus(carId);
            });

            $('.toggle-favorite').click(function () {
                var carId = $(this).data('car-id');
                toggleFavorite(carId);
            });
        });

        function checkFavoriteStatus(carId) {
            $.get('@Url.Action("IsFavorite", "Carsses")', { carId: carId }, function (data) {
                var button = $(`button[data-car-id="${carId}"]`);
                if (data.isFavorite) {
                    button.html('<i class="fas fa-heart text-danger"></i> В избранном');
                    button.removeClass('btn-outline-success').addClass('btn-danger');
                }
            });
        }

        function toggleFavorite(carId) {
            $.post('@Url.Action("ToggleFavorite", "Carsses")', { carId: carId }, function (data) {
                if (data.success) {
                    var button = $(`button[data-car-id="${carId}"]`);
                    if (data.isFavorite) {
                        button.html('<i class="fas fa-heart text-danger"></i> В избранном');
                        button.removeClass('btn-outline-success').addClass('btn-danger');
                    } else {
                        button.html('<i class="far fa-heart"></i> В избранное');
                        button.removeClass('btn-danger').addClass('btn-outline-success');
                    }
                    toastr.success(data.message);
                }
            }).fail(function () {
                toastr.error('Произошла ошибка');
            });
        }
    </script>
}