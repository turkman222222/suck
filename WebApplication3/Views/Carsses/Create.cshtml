@model WebApplication3.Models.Carss

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Carss</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="model" class="control-label"></label>
                <input asp-for="model" class="form-control" />
                <span asp-validation-for="model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_marki" class="control-label"></label>
                <select asp-for="id_marki" class ="form-control" asp-items="ViewBag.id_marki"></select>
            </div>
            <div class="form-group">
                <label asp-for="id_str" class="control-label"></label>
                <select asp-for="id_str" class ="form-control" asp-items="ViewBag.id_str"></select>
            </div>
            <div class="form-group">
                <label asp-for="god_poiz" class="control-label"></label>
                <input asp-for="god_poiz" class="form-control" />
                <span asp-validation-for="god_poiz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_cvet" class="control-label"></label>
                <select asp-for="id_cvet" class ="form-control" asp-items="ViewBag.id_cvet"></select>
            </div>
            <div class="form-group">
                <label asp-for="id_salona" class="control-label"></label>
                <select asp-for="id_salona" class ="form-control" asp-items="ViewBag.id_salona"></select>
            </div>
            <div class="form-group">
                <label asp-for="id_kompl" class="control-label"></label>
                <select asp-for="id_kompl" class ="form-control" asp-items="ViewBag.id_kompl"></select>
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label">Изображение автомобиля</label>
                <input type="file" name="imageFile" class="form-control-file" accept="image/*" />
                <span asp-validation-for="image" class="text-danger"></span>

                @if (Model?.image != null)
                {
                    <div class="mt-2">
                        <img src="@Url.Action("GetImage", "Carsses", new { id = Model.id })"
                             class="img-thumbnail" style="max-height: 200px;" alt="Текущее изображение" />
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="deleteImage" id="deleteImage" value="true">
                            <label class="form-check-label" for="deleteImage">
                                Удалить текущее изображение
                            </label>
                        </div>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
